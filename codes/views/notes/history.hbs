<div class="col-md-6">
    {{#each crtuser}}
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class ="card-title d-flex justify-content-between align-items-center">
                    {{user}} <a href='/notes/edit/{{_id}}'><i class="fas fa-edit"></i></a>
                </h4>
                <p>
                    {{email}}
                </p>
                <button class="btn btn-danger btn-block btn-sm"> Delete </button>
            </div>
        </div>
    </div>
    {{else}}
     <div class="card x-auto">
         <div class="card-body">
             <p class="lead">No hay proyectos</p>
             <a href="/history" class="btn btn-success btn block"> Crea uno</a>
         </div>
     </div>
    {{/each}}
</div>